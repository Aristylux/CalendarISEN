<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calendar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/avenir_next_lt_pro_regular</item>
    </style>
    <!-- <item name="android:textColor">@color/darkGrey</item> -->

    <style name="SubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="TopBarStyle">
        <item name="android:background">@color/black</item>
    </style>

    <!-- Fragment style -->
    <style name="FragmentStyle">
        <item name="android:background">@color/black</item>
    </style>

    <!-- ********************* -->
    <!-- item vertical style -->

    <style name="ItemVerticalStyle">
        <item name="cardBackgroundColor">@color/darkGrey</item>
    </style>

    <style name="ItemVerticalCardStyle">
        <item name="cardBackgroundColor">@color/black</item>
    </style>

    <style name="ItemVerticalSpaceStyle">
        <item name="android:background">@color/black</item>
    </style>

    <!-- ********************* -->
    <!-- Popup Welcome -->
    <style name="WelcomeTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- button style -->
    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/avenir_next_lt_pro_regular</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ********************* -->
    <!-- popup course -->
    <style name="PopupStyle">
        <item name="cardBackgroundColor">@color/backgroundColorDark</item>
    </style>
    <style name="PopupTitleStyle">
        <item name="cardBackgroundColor">@color/darkGrey</item>
    </style>

    <!-- ********************* -->
    <!-- Popup Confirmation -->
    <style name="PopupConfirmationStyle">
        <item name="cardBackgroundColor">@color/darkGrey</item>
    </style>

    <style name="ImageConfirmation">
        <item name="android:tint">@color/darkGreen</item>
    </style>

    <style name="ButtonConfirmationStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for navigation bar -->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
        <item name="android:background">@color/black</item>
        <item name="itemTextColor">@drawable/navigation_bar_menu_dark</item>
        <item name="itemIconTint">@drawable/navigation_bar_menu_dark</item>
    </style>

    <!-- ********************* -->
    <!-- parameter style -->
    <!-- Text style -->
    <style name="ToolbarTitleStyle" parent="TitleTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParameterTitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ParameterSubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ParameterContainerTitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- color style -->
    <style name="ToolbarStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="ButtonClose">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SettingContainer">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BoxStyle">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/halfGrey</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>