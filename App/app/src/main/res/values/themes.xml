<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--
    <style name="Theme.Calandar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <style name="Theme.Calendar" parent="Theme.MaterialComponents.Light.NoActionBar">
    -->
    <style name="Theme.Calendar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/blue</item>
        <!--
        <item name="colorPrimaryVariant">@color/purple_700</item>
        -->
        <item name="colorPrimaryVariant">@color/blue</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="DetailTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

    </style>

    <!-- default style -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/avenir_next_lt_pro_regular</item>
    </style>

    <!-- title style -->
    <style name="TitleTextStyle" parent="SubtitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleTextLightStyle" parent="TitleTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- subtitle style -->
    <style name="SubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <!-- snack bar style -->
    <style name="SnackBarStyle" parent="DefaultTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ********************* -->
    <!-- Popup Welcome -->
    <style name="WelcomeTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WelcomeTitleTextStyle" parent="WelcomeTextStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- button style -->
    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/avenir_next_lt_pro_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ********************* -->
    <!-- Popup Delete -->
    <style name="DeleteTitleTextStyle" parent="WelcomeTitleTextStyle">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DeleteTextStyle" parent="WelcomeTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- ********************* -->
    <!-- Popup Confirmation -->
    <style name="PopupConfirmationStyle">
        <item name="cardBackgroundColor">@color/lightGreen</item>
    </style>

    <style name="ImageConfirmation">
        <item name="android:tint">@color/darkGreen</item>
    </style>

    <style name="ButtonConfirmationStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ********************* -->
    <!-- Fragment style -->
    <style name="FragmentStyle">
        <item name="android:background">@color/backgroundColorLight</item>
    </style>

    <!-- ********************* -->
    <!-- item vertical style -->

    <style name="ItemVerticalStyle">
        <item name="cardBackgroundColor">@color/background</item>
    </style>

    <style name="ItemVerticalCardStyle">
        <item name="cardBackgroundColor">@color/backgroundColorLight</item>
    </style>

    <style name="ItemVerticalSpaceStyle">
        <item name="android:background">@color/rippleGrey</item>
    </style>

    <!-- ********************* -->
    <!-- popup course -->
    <style name="PopupStyle">
        <item name="cardBackgroundColor">@color/backgroundColorLight</item>
    </style>
    <style name="PopupTitleStyle">
        <item name="cardBackgroundColor">@color/background</item>
    </style>

    <!-- Style for navigation bar -->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
        <item name="android:background">@color/blue</item>
        <item name="cornerRadius">20dp</item>
        <item name="itemTextColor">@drawable/navigation_bar_menu_light</item>
        <item name="itemIconTint">@drawable/navigation_bar_menu_light</item>
    </style>

    <!-- ********************* -->
    <!-- parameter style -->
    <!-- Text style -->
    <style name="ToolbarTitleStyle" parent="TitleTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsNames" parent="WelcomeTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ParameterTitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ParameterSubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/halfGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ParameterContainerTitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- color style -->
    <style name="ToolbarStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ButtonClose">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="SettingContainer">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BoxStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Image">
        <item name="android:tint">@color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">30dp</item>
    </style>


    <!-- ********************* -->
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/rippleGrey</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="MyRadioButtonStyle" parent="SubtitleTextStyle">
        <item name="buttonTint">@drawable/radio_button_color</item>
    </style>

    <!-- ********************* -->

    <!--
    <item name="itemTextColor">@drawable/menu_daily</item>
        <item name="itemIconTint">@drawable/menu_daily</item>
    -->

