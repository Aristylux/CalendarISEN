        <item name="color">@color/lightGrey</item>
    </style>
    <style name="BottomNavigationViewButtonSelected">
        <item name="color">@color/white</item>
    </style>
    <style name="BottomNavigationViewButtonNeSelected">
        <item name="color">@color/black</item>
    </style>
